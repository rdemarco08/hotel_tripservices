<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
    <body class="container">

        <header>
            <% include ../partials/header %>
        </header>

        <main>
            <form action="/search" method="post">
                <div class="form-group">
            	   <label for="city">Destination City: </label>
            	   <input class="form-control" id="city" type="text" name="city" value="" placeholder="Denver">
                </div>
                <div class="form-group">
                   <label for="state">State: </label>
                   <input class="form-control" id="state" type="text" name="state" value="" placeholder="CO">
                </div>
                <div class="form-group">
                   <label for="country">Country: </label>
                   <input class="form-control" id="country" type="text" name="country" value="" placeholder="US">
                </div>
                <div class="form-group">
            	   <label for="sdate">Check-In: </label>
            	   <input class="form-control" id="sdate" type="text" name="sdate" value="" placeholder="YYYYMMDD">
                </div>
                <div class="form-group">
            	   <label for="edate">Check-Out:  </label>
            	   <input class="form-control" id="edate" type="text" name="edate" value="" placeholder="YYYYMMDD">
                </div>
                <div class="form-group">
            	   <label for="guests">Guests: </label>
            	   <input class="form-control" id="guests" type="text" name="guests" value="1">
                </div>
            	<input type="submit" value="SUBMIT">
            </form>
            <% if(errors){ %> 
                <ul>
                <% errors.forEach(function( err){ %>
                    <li> <%= err.msg %> </li>
                <% }) %>
                </ul>
            <%} %> 
        </main>

        <footer>
            <% include ../partials/footer %>
        </footer>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
        <script>
        $(document).ready(function() {
            $("#sdate").datepicker({
                minDate: 0,
                maxDate: "+11M +10D",
                dateFormat: "yymmdd"
            });
            $("#edate").datepicker({
                minDate: 0,
                maxDate: "+11M +10D",
                dateFormat: "yymmdd"
            });
            $("button").click(function() {
                var checkin = $("#sdate").val();
                if (checkin === "") {
                    alert("Please select check-in dates.");
                } 
                var checkout = $("#edate").val();
                if (checkout === "") {
                    alert("Please select check-out dates.");
                } 
            });
        });
        </script>
    </body>
</html>